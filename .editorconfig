# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.xlf]
max_line_length = off
indent_style = space
indent_size = 4

[{*.ts,*.js}]
indent_style = space
indent_size = 4
max_line_length = 100

[{package.json,package-lock.json}]
indent_style = space
indent_size = 4
